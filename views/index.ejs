<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Fitness Calendar</title>
    <link rel="stylesheet" href="/styles/calendar.css" />
    <link rel="stylesheet" href="/styles/header.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Jura:wght@500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('partials/header') %>
    <div id="calendar">
      <div class="header">
        <button id="prev">&lt;</button>
        <div id="month-year"></div>
        <button id="next">&gt;</button>
      </div>
      <div class="weekdays">
        <div>Sun</div>
        <div>Mon</div>
        <div>Tue</div>
        <div>Wed</div>
        <div>Thu</div>
        <div>Fri</div>
        <div>Sat</div>
      </div>
      <div class="days" id="days"></div>
    </div>

    <!-- The Modal -->
    <div id="myModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2 id="modal-class-name"></h2>
        <p><strong>Instructor:</strong> <span id="modal-instructor"></span></p>
        <p><strong>Duration:</strong> <span id="modal-duration"></span></p>
        <p><strong>Details:</strong> <span id="modal-details"></span></p>
      </div>
    </div>

    <script src="/scripts/calendar.js"></script>
  </body>
</html>
