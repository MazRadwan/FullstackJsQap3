<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Staff Interface</title>
    <link rel="stylesheet" href="/styles/header.css" />
    <link rel="stylesheet" href="/styles/staff.css" />
    <link rel="stylesheet" href="/styles/footer.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Jura:wght@500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <section id="button-section">
        <header>
          <h1>Staff Interface</h1>
          <nav>
            <ul>
              <li><button id="search-classes-btn">Search Classes</button></li>
              <li><button id="add-class-btn">Add New Class</button></li>
              <li><button id="update-class-btn">Update Class</button></li>
              <li>
                <button id="update-class-field-btn">Update Class Field</button>
              </li>
              <li><button id="delete-class-btn">Delete Class</button></li>
            </ul>
          </nav>
        </header>
      </section>
      <section id="form-section">
        <h2>Search Classes</h2>
        <div id="search-bar">
          <input type="text" id="query-field" placeholder="Search..." />
          <select id="query-attribute">
            <option value="class_name">Class Name</option>
            <option value="instructor">Instructor</option>
          </select>
          <button id="search-button">Search</button>
        </div>
      </section>
      <section id="results-section" style="display: none">
        <div id="query-results"></div>
      </section>
      <section id="update-field-section" style="display: none">
        <!-- This section will be used for the update field functionality -->
      </section>
      <section id="delete-class-section" style="display: none">
        <h2>Delete Class</h2>
        <div id="delete-search-bar">
          <input
            type="text"
            id="delete-query-field"
            placeholder="Search by name or instructor"
          />
          <select id="delete-query-attribute">
            <option value="class_name">Class Name</option>
            <option value="instructor">Instructor</option>
          </select>
          <button id="delete-search-button">Search</button>
        </div>
        <div id="delete-results-section"></div>
      </section>

      <!-- Modal Structure -->
      <div id="delete-modal" class="modal">
        <div class="modal-content">
          <h4>Confirm Delete</h4>
          <p>Are you sure you want to delete this class?</p>
          <div class="modal-footer">
            <button id="cancel-button" class="modal-close btn">Cancel</button>
            <button id="confirm-delete-button" class="btn red">Delete</button>
          </div>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>

    <script src="/scripts/staff.js"></script>
  </body>
</html>
